<Window x:Class="PhoneStore.Net.View.AddNV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneStore.Net.View"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:syncfusion="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"  Height="460" Width="650" WindowStartupLocation="CenterScreen"
        Title="AddNV">
    <Border CornerRadius="15" Background="AliceBlue">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
              Background="Transparent">
                <StackPanel 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"
                            >
                    <materialDesign:PackIcon Kind="WindowMinimize" Foreground="#6C63FF" Height="24" Width="24" Margin="0,0,8,0">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding Minimizewd}"
                                                   CommandParameter="{Binding ElementName=AddNDwd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </materialDesign:PackIcon>
                    <materialDesign:PackIcon Kind="CloseThick" Foreground="#6C63FF" Height="24" Width="24">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding Closewd}"
                                                   CommandParameter="{Binding ElementName=AddNDwd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </materialDesign:PackIcon>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <TextBlock
                Text="THÊM THÔNG TIN NHÂN VIÊN"
                HorizontalAlignment="Center"
                FontSize="24"
                Foreground="#6C63FF"
                
                    
                />
            </Grid>
            <Grid Grid.Row="2"
              Margin="0,15,0,0"
              >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="322*"/>
                        <RowDefinition Height="123*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="210"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border Margin="0,0,0,0.333" Grid.RowSpan="2">
                        <Ellipse Height="150" Width="150" 
                         VerticalAlignment="Top" HorizontalAlignment="Left"
                         Margin="30" StrokeThickness="5">
                            <Ellipse.Effect>
                                <DropShadowEffect ShadowDepth="0"
                      Color="Black"
                      Opacity="10"
                      BlurRadius="10"/>
                            </Ellipse.Effect>
                            <Ellipse.Fill>
                                <ImageBrush x:Name="HinhAnh1" ImageSource="{Binding linkaddimage}"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Border>
                    <Button HorizontalAlignment="Left" Margin="30,-80,0,0" VerticalAlignment="Top"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}"
                    Content="Thêm ảnh đại diện" 
                    BorderThickness="0"
                    Width="160" Height="40" Background="White" Foreground="#6C63FF"
                    Grid.Row="1">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding AddImage}"
                                               CommandParameter="{Binding ElementName=HinhAnh1}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                    <Grid Grid.Column="1">
                        <StackPanel>
                            <StackPanel
                    Orientation="Horizontal"
                    >
                                <TextBox    
                                Margin="0,10,0,0" Foreground="Black" 
                                materialDesign:HintAssist.Foreground="Black"
                                materialDesign:TextFieldAssist.UnderlineBrush="#6C63FF"
                                Width="190"
                                Style="{StaticResource MaterialDesignFilledTextBox}"
                                VerticalAlignment="Top"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                MaxWidth="400" x:Name="MaND"
                                IsEnabled="False"
                                
                                materialDesign:HintAssist.Hint="Mã ND"/>
                                <TextBox 
                                Margin="10,10,0,0" Foreground="Black" 
                                materialDesign:HintAssist.Foreground="Black"
                                materialDesign:TextFieldAssist.UnderlineBrush="#6C63FF"
                                Width="190"
                                Style="{StaticResource MaterialDesignFilledTextBox}"
                                VerticalAlignment="Top"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                MaxWidth="400" x:Name="TenND"
                                
                                materialDesign:HintAssist.Hint="Họ tên"/>
                            </StackPanel>
                            <StackPanel
                            Orientation="Horizontal"
                            Margin="0,10,0,0"
                        >
                                <ComboBox 
                                x:Name="GT" 
                                Style="{StaticResource MaterialDesignFilledComboBox}"
                                materialDesign:HintAssist.Foreground="Black"
                                materialDesign:TextFieldAssist.UnderlineBrush="#6C63FF"
                                materialDesign:HintAssist.Hint="Giới tính"
                                Width="190" >
                                    <ComboBoxItem
                                Content="Nam" />
                                    <ComboBoxItem
                                Content="Nữ" />
                                    <ComboBoxItem
                                Content="Khác" />
                                </ComboBox>
                                <ComboBox 
                                Margin="10,0,0,0"
                                x:Name="QTV" 
                                Style="{StaticResource MaterialDesignFilledComboBox}"
                                materialDesign:HintAssist.Foreground="Black"
                                materialDesign:TextFieldAssist.UnderlineBrush="#6C63FF"
                                materialDesign:HintAssist.Hint="Chức vụ"
                                Width="190" >
                                    <ComboBoxItem
                                Content="Quản lý" />
                                    <ComboBoxItem
                                Content="Nhân viên" />
                                </ComboBox>
                            </StackPanel>
                            <StackPanel
                            Orientation="Horizontal"
                            Margin="0,10,0,0"
                        >
                                <DatePicker   
                                        materialDesign:HintAssist.Foreground="Black"
                                        materialDesign:TextFieldAssist.UnderlineBrush="#6C63FF"
                                        Foreground="Black" x:Name="NS"
                                       
                                        Focusable="False"
                                        materialDesign:HintAssist.Hint="Ngày sinh" Style="{StaticResource MaterialDesignFilledDatePicker}" HorizontalAlignment="Left" Width="190">

                                </DatePicker>
                                <TextBox 
                                    Margin="10,0,0,0"  Width="190"
                                    Style="{StaticResource MaterialDesignFilledTextBox}"
                                    materialDesign:HintAssist.Foreground="Black"
                                    materialDesign:TextFieldAssist.UnderlineBrush="#6C63FF"
                                    VerticalAlignment="Top"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    HorizontalAlignment="Left" x:Name="SDT"
                                    
                                    materialDesign:HintAssist.Hint="Số điện thoại" />
                            </StackPanel>
                            <TextBox 
                                Foreground="Black" 
                                Margin="-50,10,0,0"
                                Style="{StaticResource MaterialDesignFilledTextBox}"
                                VerticalAlignment="Top"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                MaxWidth="400" x:Name="Mail"
                                materialDesign:HintAssist.Foreground="Black"
                                materialDesign:TextFieldAssist.UnderlineBrush="#6C63FF"
                                
                                materialDesign:HintAssist.Hint="Email" Width="390"/>
                            <TextBox 
                                Foreground="Black" 
                                Margin="-50,10,0,0"
                                Style="{StaticResource MaterialDesignFilledTextBox}"
                                VerticalAlignment="Top"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                MaxWidth="400" x:Name="DC"
                                materialDesign:HintAssist.Foreground="Black"
                                materialDesign:TextFieldAssist.UnderlineBrush="#6C63FF"
                                
                                materialDesign:HintAssist.Hint="Địa chỉ" Width="390"/>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Button
                        Margin="0,20,0,0"
                        Width="390"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Thêm"
                        BorderThickness="0"
                        
                        Foreground="#6C63FF"
                        Background="White"
                        Height="40"
                        Style="{StaticResource MaterialDesignFlatMidBgButton}"
                    >
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding AddNDCommand}"
                                                   CommandParameter="{Binding ElementName=AddNDwd}"></i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
