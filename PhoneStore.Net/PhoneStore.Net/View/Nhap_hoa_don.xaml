<Window x:Class="PhoneStore.Net.View.Nhap_hoa_don"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PhoneStore.Net.View"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" ResizeMode="NoResize"
      Title="Nhap_hoa_don" Height="650" 
      Width="727" WindowStartupLocation="CenterScreen">

    <Border x:Name="xx" CornerRadius="15" Background="AliceBlue">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="250"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"
                            >

                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <TextBlock
                Text="HÓA ĐƠN"
                Foreground="Black"
                FontWeight="Bold"
                FontSize="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                />
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Border
                    Margin="20,0,20,0"
                    Background="White"
                    CornerRadius="15"
                    >
                        <StackPanel
                        Margin="10"
                        >
                            <TextBlock
                            Margin="0,10,0,5"
                            Text="THÔNG TIN HÓA ĐƠN"
                            FontWeight="Bold"
                            HorizontalAlignment="Center"
                            />
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                Margin="8,0,0,0"
                                Text="MÃ ND"
                                />

                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBox
                                            Height="30"
                                            x:Name="MaND"
                                            Width="290"
                                            BorderThickness="2"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
    
                                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                            materialDesign:TextFieldAssist.UnderlineBrush="BlueViolet"
                                        />
                                </StackPanel>

                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="8,0,0,0"
                                        Text="MÃ KH"
                                        />  

                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBox
                                        Height="30"
                                        x:Name="MaKH"
                                        Width="290"
                                        BorderThickness="2"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
    
                                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                        materialDesign:TextFieldAssist.UnderlineBrush="BlueViolet"
                                />
                                </StackPanel>

                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="8,0,0,0"
                                        Text="THỜI GIAN"
                                        />  
                                </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBox
                                    Height="30"
                                    x:Name="NgayHD"
                                    Width="290"
                                    BorderThickness="2"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
    
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="BlueViolet"
                            />
                            </StackPanel>

                        </StackPanel>

                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="8,0,0,0"
                                        Text="SỐ HÓA ĐƠN"
                                        />  
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBox
                                        Height="30"
                                        x:Name="SoHD"
                                        Width="290"
                                        BorderThickness="2"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
    
                                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                        materialDesign:TextFieldAssist.UnderlineBrush="BlueViolet"
/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
                <Grid Grid.Column="1">
                    <Border
                    Margin="20,0,20,0"
                    Background="White"
                    CornerRadius="15"
                    >
                        <StackPanel
                        Margin="10"
                        >
                            <TextBlock
                            Margin="0,10,0,5"
                            Text="CHI TIẾT HÓA ĐƠN"
                            FontWeight="Bold"
                            HorizontalAlignment="Center"
                            />

                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="8,0,0,0"
                                        Text="MÃ SẢN PHẨM"
                                        />  

                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBox
                                        Height="30"
                                        x:Name="MaSP"
                                        Width="290"
                                        BorderThickness="2"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
    
                                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                        materialDesign:TextFieldAssist.UnderlineBrush="BlueViolet" 
                                    />
                                </StackPanel>

                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="8,0,0,0"
                                        Text="ĐƠN GIÁ"
                                        />  

                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBox
                                        Height="30"
                                        x:Name="DG"
                                        Width="290"
                                        BorderThickness="2"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
    
                                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                        materialDesign:TextFieldAssist.UnderlineBrush="BlueViolet"
                                    />
                                </StackPanel>

                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Margin="8,0,0,0"
                                            Text="SỐ LƯỢNG"
                                            />          

                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBox
                                            Height="30"
                                            x:Name="SL"
                                            Width="132"
                                            BorderThickness="2"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
    
                                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                            materialDesign:TextFieldAssist.UnderlineBrush="BlueViolet"
                                        />
                                    </StackPanel>

                                </StackPanel>
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Margin="18,0,0,0"
                                            Text="KHUYẾN MÃI"
                                            />      

                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBox
                                            Height="30"
                                            x:Name="km"
                                            Width="132"
                                            BorderThickness="2"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
    
                                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                            materialDesign:TextFieldAssist.UnderlineBrush="BlueViolet" Margin="15,0,0,0"
                                        />
                                    </StackPanel>

                                </StackPanel>
                            </StackPanel>
                            <StackPanel
                                Margin="20"
                                Orientation="Horizontal"
                            >
                                <Button
                                BorderThickness="0"
                                Content="THÊM"
                                FontSize="12"
                                x:Name="addbtn" Background="AliceBlue" Foreground="#DD242222" Click="addbtn_Click"
                            >
                                </Button>
                                <Button 
                                BorderThickness="0"
                                Margin="15,0,0,0"
                                Content="XÓA"
                                FontSize="12"
                                x:Name="deletebtn" Background="AliceBlue" Foreground="#DD242222" Click="deletebtn_Click"
                            >

                                </Button>
                                <Button
                                BorderThickness="0"
                                Margin="20,0,0,0"
                                Content="THANH TOÁN"
                                FontSize="12"
                                x:Name="ttbtn" Background="AliceBlue" Foreground="#DD242222" Click="ttbtn_Click"
                            >
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Row="3">
                <StackPanel>

                    <DataGrid ItemsSource="{Binding dtHoadon }" Background="White" AutoGenerateColumns="False"  x:Name="dtHoaDon" Height="216" Width="456" RenderTransformOrigin="0.5,0.5"    >
                        <DataGrid.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleY="-0.136"/>
                                <RotateTransform/>
                                <TranslateTransform Y="2.242"/>
                            </TransformGroup>
                        </DataGrid.RenderTransform>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mã SP" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding MASP}"/>
                            <DataGridTextColumn Header="Tên SP" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding TENSP}"/>
                            <DataGridTextColumn Header="Dung lượng" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding SIZE}"/>

                            <DataGridTextColumn Header="Số lượng" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding SL}"/>
                            <DataGridTextColumn Header="Thành Tiền" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding SIZE}"/>

                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="4"
              Margin="0,11,0,0"
              >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="2"
                  HorizontalAlignment="Right"
                  >
                    <StackPanel Margin="-221,42,222,14">
                        <TextBlock
                        Foreground="Black"
                        Text="THÀNH TIỀN : "
                        FontSize="16"
                    />
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="3"/>
            </Grid>
        </Grid>
    </Border>
</Window>
