<Page x:Class="PhoneStore.Net.View.Nhap_hoa_don"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PhoneStore.Net.View"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="Nhap_hoa_don" Height="658">

    <Border x:Name="xx" CornerRadius="15" Background="AliceBlue">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="250"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"
                            >

                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <TextBlock
                Text="HÓA ĐƠN"
                Foreground="Black"
                FontWeight="Bold"
                FontSize="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                />
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Border
                    Margin="20,0,20,0"
                    Background="White"
                    CornerRadius="15"
                    >
                        <StackPanel
                        Margin="10"
                        >
                            <TextBlock
                            Margin="0,10,0,5"
                            Text="THÔNG TIN HÓA ĐƠN"
                            FontWeight="Bold"
                            HorizontalAlignment="Center"
                            />
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                Margin="8,0,0,0"
                                Text="MÃ ND"
                                />

                                </StackPanel>
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox
                                            x:Name="MaND"
                                            HorizontalAlignment="Left"
                                            BorderThickness="0"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                            IsEnabled="False"
                                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                Margin="8,0,0,0"
                                Text="MÃ KH"
                                />
                                    <TextBlock
                                Margin="2,0,0,0"
                                Text="|"
                                />
                                    <TextBlock
                                Margin="2,0,0,0"
                                Text="HỌ TÊN KHÁCH HÀNG"
                                />
                                </StackPanel>
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                        x:Name="MaKH"
                                        HorizontalAlignment="Left"
                                        BorderThickness="0"
                                        IsEnabled="False"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                </Border>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock
                                Margin="8,0,0,0"
                                Text="THỜI GIAN"
                            />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                x:Name="Ngay"
                                HorizontalAlignment="Left"
                                BorderThickness="0"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                IsEnabled="False"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                </Border>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock
                                Margin="8,0,0,0"
                                Text="SỐ HÓA ĐƠN"
                            />
                                <Border  BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                x:Name="SoHD"
                                HorizontalAlignment="Left"
                                BorderThickness="0"
                                IsEnabled="False"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
                <Grid Grid.Column="1">
                    <Border
                    Margin="20,0,20,0"
                    Background="White"
                    CornerRadius="15"
                    >
                        <StackPanel
                        Margin="10"
                        >
                            <TextBlock
                            Margin="0,10,0,5"
                            Text="CHI TIẾT HÓA ĐƠN"
                            FontWeight="Bold"
                            HorizontalAlignment="Center"
                            />
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                Margin="8,0,0,0"
                                Text="TÊN SP | DUNG LƯỢNG | TỒN KHO"
                            />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <ComboBox
                                    Margin="4,0,0,0"
                                    x:Name="SP"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    ItemsSource="{Binding LSP}"
                                    >
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding TENSP}"/>
                                                    <TextBlock
                                                    Text="|"
                                                    Margin="4,0,4,0"
                                                    />
                                                    <TextBlock 
                                                    Text="{Binding SIZE}"/>
                                                    <TextBlock
                                                    Text="|"
                                                    Margin="4,0,4,0"
                                                    />
                                                    <TextBlock 
                                                    Text="{Binding SL}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectionChanged">
                                                <i:InvokeCommandAction Command="{Binding Choose}"
                                                   CommandParameter="{Binding ElementName=AddOrderwd}"></i:InvokeCommandAction>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </ComboBox>
                                </Border>
                            </StackPanel>
                            <StackPanel Margin="0,2,0,0">
                                <TextBlock
                                Margin="8,0,0,0"
                                Text="ĐƠN GIÁ"
                            />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                x:Name="DG"
                                HorizontalAlignment="Left"
                                BorderThickness="0"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                IsEnabled="False"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                <StackPanel
                                Width="140"
                                >
                                    <TextBlock
                                Margin="8,0,0,0"
                                Text="SỐ LƯỢNG"
                                />
                                    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                        <TextBox
                                x:Name="SL"
                                HorizontalAlignment="Left"
                                BorderThickness="0"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                    </Border>
                                </StackPanel>
                                <StackPanel Width="140" Margin="10,0,0,0">
                                    <TextBlock
                                Margin="8,0,0,0"
                                Text="KHUYẾN MÃI"
                            />
                                    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                        <TextBox
                                x:Name="khuyenmai"
                                HorizontalAlignment="Left"
                                BorderThickness="0"
                                IsEnabled="False"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel
                                Margin="20"
                                Orientation="Horizontal"
                            >
                                <Button
                                BorderThickness="0"
                                Content="THÊM"
                                FontSize="12"
                                x:Name="addbtn" Background="AliceBlue" Foreground="#DD242222" Click="addbtn_Click"
                            >
                                </Button>
                                <Button 
                                BorderThickness="0"
                                Margin="15,0,0,0"
                                Content="XÓA"
                                FontSize="12"
                                x:Name="deletebtn" Background="AliceBlue" Foreground="#DD242222" Click="deletebtn_Click"
                            >

                                </Button>
                                <Button
                                BorderThickness="0"
                                Margin="20,0,0,0"
                                Content="THANH TOÁN"
                                FontSize="12"
                                x:Name="ttbtn" Background="AliceBlue" Foreground="#DD242222" Click="ttbtn_Click"
                            >
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Row="3">
                <StackPanel>

                    <DataGrid ItemsSource="{Binding dtHoadon }" Background="White" AutoGenerateColumns="False"  Name="dtSanPham" Height="186" Width="456" RenderTransformOrigin="0.5,0.5"    >
                        <DataGrid.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleY="-0.136"/>
                                <RotateTransform/>
                                <TranslateTransform Y="2.242"/>
                            </TransformGroup>
                        </DataGrid.RenderTransform>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mã SP" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding MASP}"/>
                            <DataGridTextColumn Header="Tên SP" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding TENSP}"/>
                            <DataGridTextColumn Header="Dung lượng" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding SIZE}"/>

                            <DataGridTextColumn Header="Số lượng" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding SL}"/>
                            <DataGridTextColumn Header="Thành Tiền" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding SIZE}"/>

                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="3"
              Margin="0,188,0,0" Grid.RowSpan="2"
              >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="2"
                  HorizontalAlignment="Right"
                  >
                    <StackPanel Margin="-391,42,391,14">

                        <TextBlock
                        Foreground="Black"
                        Text="THÀNH TIỀN : "
                        FontSize="16"
                        Margin="0,10,0,0"
                    />
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="3">
                    <StackPanel>

                        <TextBlock
                        Foreground="Black"
                        x:Name="TT1"
                        Margin="0,10,30,0"
                        FontSize="16"
                        HorizontalAlignment="Right"
                    />
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Page>
