<Page x:Class="PhoneStore.Net.View.Nhap_hoa_don"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PhoneStore.Net.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Nhap_hoa_don">

    <Border
        x:Name="xx"
        CornerRadius="15"
        Background="AliceBlue"
>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="200"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        >
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <TextBlock
            Text="HÓA ĐƠN "
            Foreground="Black"
           
            FontSize="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" TextAlignment="Center"
            />
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Border
                Margin="20,0,20,0"
                Background="White"
                CornerRadius="15"
                >
                        <StackPanel
                    Margin="10"
                    >
                            <TextBlock
                        Margin="0,10,0,5"
                        Text="THÔNG TIN HÓA ĐƠN "
                       
                        HorizontalAlignment="Center"
                        />
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                            Margin="8,0,0,0"
                            Text="MÃ ND"
                           
                            />
                                    <TextBlock
                            Margin="4,0,0,0"
                            Text="|"
                            
                            />
                                    <TextBlock
                            Margin="4,0,0,0"
                            Text="TÊN ND"
                            
                            />
                                </StackPanel>
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox
                                    x:Name="MaND" 
                                    HorizontalAlignment="Left"
                                    
                                    BorderThickness="0"
                                    
                                    IsEnabled="False"
                                    
                                    ></TextBox>
                                        <TextBox
                                   
                                    HorizontalAlignment="Left"
                                    
                                    BorderThickness="0"
                                   
                                    IsEnabled="False"
                                    
                                    ></TextBox>
                                        <TextBox
                                    x:Name="TenND"
                                    HorizontalAlignment="Left"
                                    
                                    BorderThickness="0"
                                    
                                    IsEnabled="False"
                                 
                                ></TextBox>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                    Margin="8,0,0,0"
                                    Text="MÃ KH"
                           
                                    />      
                                    <TextBlock
                                    Margin="4,0,0,0"
                                    Text="|"
                                    />
                                    <TextBlock
                                    Margin="4,0,0,0"
                                    Text="HỌ TÊN KHÁCH HÀNG "

                                    />                      
                                </StackPanel>
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox
                                            x:Name="MaKH" 
                                            HorizontalAlignment="Left"
        
                                            BorderThickness="0"
        
                                            IsEnabled="False"
        
                                            ></TextBox>
                                        <TextBox
       
                                            HorizontalAlignment="Left"
        
                                            BorderThickness="0"
       
                                            IsEnabled="False"
        
                                            ></TextBox> 
                                        <TextBox
                                            x:Name="TenKH"
                                            HorizontalAlignment="Left"
        
                                            BorderThickness="0"
        
                                            IsEnabled="False"
     
                                         ></TextBox>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock
                                Margin="8,0,0,0"
                                Text="THỜI GIAN"
                        />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                x:Name="Ngay"
                                HorizontalAlignment="Left"
                                
                                BorderThickness="0"
                               
                                IsEnabled="False"
                               
                            ></TextBox>
                                </Border>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock
                            Margin="8,0,0,0"
                            Text="SỐ HÓA ĐƠN"
                           
                        />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox IsEnabled="False"
                            x:Name="MaPN"
                            HorizontalAlignment="Left"
                            
                            BorderThickness="0"
                            
                            ></TextBox>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
                <Grid Grid.Column="1">
                    <Border
                Margin="20,0,20,0"
                Background="White"
                CornerRadius="15"
                >
                        <StackPanel
                         Margin="10"
                    >
                            <TextBlock
                        Margin="0,10,0,5"
                        Text="CHI TIẾT HÓA ĐƠN "
                        
                        HorizontalAlignment="Center"
                        />
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                            Margin="8,0,0,0"
                            Text="TÊN SP | DUNG LƯỢNG | TỒN KHO"
                          
                        />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <ComboBox
                                Margin="4,0,0,0"
                                x:Name="SP"
                                
                                BorderThickness="0"
                                
                                ItemsSource="{Binding LSP}"
                                >
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding TENSP}"/>
                                                    <TextBlock
                                                Text="|"
                                                Margin="4,0,4,0"
                                                />
                                                    <TextBlock 
                                                Text="{Binding SIZE}"/>
                                                    <TextBlock
                                                Text="|"
                                                Margin="4,0,4,0"
                                                />
                                                    <TextBlock 
                                                Text="{Binding SL}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>

                                    </ComboBox>
                                </Border>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="ĐƠN GIÁ"
                            />      
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                    x:Name="Dongia"
                                    HorizontalAlignment="Left"
        
                                    BorderThickness="0"
       
                                    IsEnabled="False"
       
                                ></TextBox>     
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel
                                 Width="150"
                            >
                                    <TextBlock
                                    Margin="8,0,0,0"
                                    Text="SỐ LƯỢNG"
                            
                            />
                                    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                        <TextBox
                                        x:Name="SL"
                                        HorizontalAlignment="Left"
                                    
                                        BorderThickness="0"
                                   
                                ></TextBox>
                                    </Border>
                                </StackPanel>
                                <StackPanel
                                 Width="140"
                            >
                                    <TextBlock
                                Margin="8,0,0,0"
                                Text="KHUYẾN MÃI "
                               
                            />
                                    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                        <TextBox
                                    x:Name="DG" IsEnabled="False"
                                    HorizontalAlignment="Left"
                                    
                                    BorderThickness="0"
                                    
                                ></TextBox>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel
                        Margin="20"
                        Orientation="Horizontal"
                        >
                                <Button Margin="4,0,0,0"
                                BorderThickness="0"
                                Content="THÊM"
                                FontSize="12"
                                x:Name="addbtn" Width="40"
                               Background="AliceBlue"
                        >

                                </Button>
                                <Button    
                            BorderThickness="0"
                            Margin="15,0,0,0"
                            Content="XÓA"
                            FontSize="12"
                            x:Name="deletebtn" Width="40"
                             Background="AliceBlue"
                        >
                                </Button>
                                <Button                            
                            BorderThickness="0"
                            Margin="15,0,0,0"
                            Content="THANH TOÁN"
                            FontSize="12"
                             Background="AliceBlue"
                            x:Name="ttbtn" Width="80 "
                        >
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Row="3">
                <StackPanel>
                    <Border
                Margin="-12,10,0,0"
                Width="600"
                Height="40"
                CornerRadius="10"
                Background="White"
                >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <TextBlock
                            Text="MÃ SP"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                           
                            FontSize="12"
                        />
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBlock
                            Margin="2,0,0,0"
                            HorizontalAlignment="Left"
                            Text="TÊN SP"
                            VerticalAlignment="Center"
                            
                            FontSize="12"
                        />
                            </Grid>
                            <Grid Grid.Column="2">
                                <TextBlock
                            Text="DUNG  LƯỢNG "
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                           
                            FontSize="12"
                        />
                            </Grid>
                            <Grid Grid.Column="3">
                                <TextBlock
                            Text="SL"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            MaxWidth="150"
                            
                            FontSize="12"
                        />
                            </Grid>
                            <Grid Grid.Column="4">
                                <TextBlock
                            Text="THÀNH TIỀN"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            MaxWidth="150"
                            
                            FontSize="12"
                        />
                            </Grid>
                        </Grid>
                    </Border>
                    <ListView x:Name="ListViewSP" 
                  SelectionMode="Single"
                  ScrollViewer.VerticalScrollBarVisibility="Hidden"
                  Height="220"
                >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                            Margin="35,0,0,0"
                            Width="600"
                            Height="40"
                            CornerRadius="10"
                            Background="White"
                >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="130"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <TextBlock
                        Text="{Binding MaSp}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        
                        FontSize="12"
                        />
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <TextBlock
                                        Margin="2,0,0,0"
                                        HorizontalAlignment="Left"
                                        Text="{Binding TenSP}"
                                        VerticalAlignment="Center"
                                        
                                        FontSize="12"
                                    />
                                        </Grid>
                                        <Grid Grid.Column="2">
                                            <TextBlock
                                        Text="{Binding Size}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        
                                        FontSize="12"
                                    />
                                        </Grid>
                                        <Grid Grid.Column="3">
                                            <TextBlock
                                        Text="{Binding SL}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        MaxWidth="150"
                                       
                                        FontSize="12"
                                    />
                                        </Grid>
                                        <Grid Grid.Column="4">
                                            <TextBlock
                                      
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        MaxWidth="150"
                                        
                                        FontSize="12"
                                    />
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="4"
                Margin="0,4,0,0"
          >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0"
              HorizontalAlignment="Right"
              >
                    <TextBlock
                Foreground="Black"
                Text="THÀNH TIỀN: "
                
                FontSize="16"
                />
                </Grid>
                <Grid Grid.Column="1">
                    <TextBlock
                Foreground="Black"
                x:Name="TT"
                
                FontSize="16"
                />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Page>
