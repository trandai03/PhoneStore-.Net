            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.572"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.349"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Tìm Kiếm" HorizontalAlignment="Left" Margin="331,100,0,0" VerticalAlignment="Top" Width="90" Height="26" Background="#FF9B00FF" FontSize="14" FontFamily="Times New Roman" Foreground="Black"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="26" Margin="91,100,0,0" VerticalAlignment="Top" Width="120"
                
                >
            <TextBlock Foreground="DarkGray" HorizontalAlignment="Center" Height="26" TextWrapping="Wrap" Text="Search" VerticalAlignment="Bottom" Width="120" Margin="0,0,0,-1"/>
        </Border>
        <Label Content="DANH SÁCH NHÂN VIÊN" HorizontalAlignment="Left" Height="29" Margin="91,170,0,0" VerticalAlignment="Top" Width="181" FontWeight="Bold" FontFamily="Times New Roman" FontSize="14"/>
        <Grid ShowGridLines="True" Margin="102,238,36,29">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"></ColumnDefinition>
                <ColumnDefinition Width="120"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Text="MÃ ĐH" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" IsEnabled="False"/>
            <TextBlock Text="KHÁCH HÀNG" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" IsEnabled="False" Grid.Column="1" />
            <TextBlock Text="NGÀY" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" IsEnabled="False" Grid.Column="2"/>
            <TextBlock Text="GIÁ" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" IsEnabled="False" Grid.Column="3"/>
            <TextBlock Text="SỐ LƯỢNG" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" IsEnabled="False" Grid.Column="4" Height="42" Width="67" TextWrapping="Wrap"/>
            <Button Grid.Column="5" Content="Sửa" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Width="36" BorderThickness="0,0,0,0" Padding="0,4,0,4" UseLayoutRounding="True" Margin="10,22,0,0" BorderBrush="Purple" Background="#FF9B00FF"/>
            <Button Grid.Column="5" Content="Xóa" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Bottom" Width="36" BorderThickness="0,0,0,0" Padding="0,4,0,4" UseLayoutRounding="True" Margin="55,0,0,15" Background="#FF9B00FF"/>

        </Grid>
    </Grid>
</Page>
