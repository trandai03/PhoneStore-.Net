<Window x:Class="PhoneStore.Net.View.Phieu_nhap_hang"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PhoneStore.Net.View"
      mc:Ignorable="d" d:DesignWidth="700"
      Title="Phieu_nhap_hang" Height="512">

    <Border
        x:Name="xx"
        CornerRadius="15"
        Background="AliceBlue"
>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="200"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        >

                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="639*"/>
                    <ColumnDefinition Width="161*"/>
                </Grid.ColumnDefinitions>
                <TextBlock
            Text="PHIẾU NHẬP HÀNG"
            Foreground="Black"
           
            FontSize="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" Margin="219,10,0,0" TextAlignment="Center"
            />
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Border
                Margin="20,0,20,0"
                Background="White"
                CornerRadius="15"
                >
                        <StackPanel
                    Margin="10"
                    >
                            <TextBlock
                        Margin="0,10,0,5"
                        Text="THÔNG TIN PHIẾU NHẬP"
                       
                        HorizontalAlignment="Center"
                        />
                            <StackPanel Orientation="Vertical"/>
                            <StackPanel/>
                            <StackPanel>
                                <TextBlock
                            Margin="8,0,0,0"
                            Text="MÃ PHIẾU NHẬP"
                           
                        />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                            x:Name="MaPN"
                            HorizontalAlignment="Left"
                             AcceptsReturn="True"
                           IsEnabled="true"
                            BorderThickness="0"
                           
                            ></TextBox>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
                <Grid Grid.Column="1">
                    <Border
                Margin="20,0,20,0"
                Background="White"
                CornerRadius="15"
                >
                        <StackPanel
                    Margin="10"
                    >
                            <TextBlock
                        Margin="0,10,0,5"
                        Text="CHI TIẾT PHIẾU NHẬP"
                       
                        HorizontalAlignment="Center"
                        />
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                            Margin="8,0,0,0"
                            Text="TÊN SP | SIZE | SỐ LƯỢNG"
                         
                        />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <ComboBox
                                Margin="4,0,0,0"
                                x:Name="SP"
                                BorderThickness="0"
                               
                                ItemsSource="{Binding LSP}"
                                >
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding TENSP}"/>
                                                    <TextBlock
                                                Text="|"
                                                Margin="4,0,4,0"
                                                />
                                                    <TextBlock
                                                Text="{Binding SIZE}"/>
                                                    <TextBlock
                                                Text="|"
                                                Margin="4,0,4,0"
                                                />
                                                    <TextBlock
                                                Text="{Binding SL}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>

                                    </ComboBox>
                                </Border>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <StackPanel
                            Width="150"
                            >
                                    <TextBlock
                            Margin="8,0,0,0"
                            Text="SỐ LƯỢNG"
                           
                            />
                                    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                        <TextBox
                                    x:Name="SL"
                                    HorizontalAlignment="Left"
                                   
                                    BorderThickness="0"
                                   
                                ></TextBox>
                                    </Border>
                                </StackPanel>
                                <StackPanel
                            Width="140"
                            >
                                    <TextBlock
                                Margin="8,0,0,0"
                                Text="ĐƠN GIÁ"
                               
                            />
                                    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                        <TextBox
                                    x:Name="DG" 
                                    HorizontalAlignment="Left"
                                   
                                    BorderThickness="0"
                                   
                                ></TextBox>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel
                        Margin="10"
                        Orientation="Horizontal"
                        >
                                <Button Margin="4,0,0,0"
                                BorderThickness="0"
                                Content="THÊM"
                                FontSize="12"
                                x:Name="addbtn" Width="73"
                                Click="InsertToDB"
                               Background="AliceBlue" Foreground="#DD000000"
                        >

                                </Button>
                                <Button    
                            BorderThickness="0"
                            Margin="15,0,0,0"
                            Content="SỬA"
                            FontSize="12"
                            x:Name="deletebtn" Width="73"
                             Background="AliceBlue" Foreground="#DD000000" Click="UpdateByName"
                        >
                                </Button>
                                <Button    
                                    Margin="15,0,0,0"
                                    BorderThickness="0"
                                    Content="XÓA"
                                    FontSize="12"
                                    x:Name="deletebtn_Copy" Width="73"
                                Click="RemoveByName"
                                    Background="AliceBlue" Foreground="#DD000000"
                        />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
            <DataGrid ItemsSource="{Binding dtHoadon}" Background="White" AutoGenerateColumns="False"  x:Name="dtHoaDon" RenderTransformOrigin="0.5,0.5" SelectionChanged="dtHoaDon_SelectionChanged" Margin="120,0,109,5" Grid.Row="3">
                <DataGrid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="-0.136"/>
                        <RotateTransform/>
                        <TranslateTransform Y="2.242"/>
                    </TransformGroup>
                </DataGrid.RenderTransform>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã SP" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding MASP}" />
                    <DataGridTextColumn Header="Tên SP" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding TENSP}" />
                    <DataGridTextColumn Header="Dung lượng" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding SIZE}"/>

                    <DataGridTextColumn Header="Số lượng" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding SL}"/>
                    <DataGridTextColumn Header="Thành Tiền" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding THANHTIEN}"/>

                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Row="4"
                Margin="0,4,0,0"
          >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0"
              HorizontalAlignment="Right"
              >
                    <TextBlock
                Foreground="Black"
                Text="TỔNG TIỀN: "
               
                FontSize="16"
                />
                </Grid>
                <Grid Grid.Column="1">
                    <TextBlock
                Foreground="Black"
                x:Name="TT"
               
                FontSize="16"
                />
                </Grid>
                <Button                            
                    BorderThickness="0"
                    Content="XÁC NHẬN"
                    FontSize="16"
                    Background="AliceBlue"
                    Click= "Confirm"
                    x:Name="ttbtn" Margin="41,0,10,14" Grid.Column="3" Foreground="#DD000000"
                        />
                <Button                            
                    BorderThickness="0"
                    Content="HỦY"
                    FontSize="16"
                    Background="AliceBlue"
                    Click="Cancel"
                    x:Name="ttbtn_Copy" Margin="88,0,10,14" Grid.Column="2" Foreground="#DD000000"
                        />
            </Grid>
        </Grid>
    </Border>
</Window>
