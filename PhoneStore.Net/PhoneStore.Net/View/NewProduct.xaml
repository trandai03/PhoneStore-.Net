<Window x:Class="PhoneStore.Net.View.NewProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneStore.Net.View"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        x:Name="Add_product"
        ResizeMode="NoResize"
        Height="550" Width="700" WindowStartupLocation="CenterScreen">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding Loadwd}"
                               CommandParameter="{Binding ElementName=Add_product}"></i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid
    Background="White"
    >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Image 
                x:Name="HinhAnh"
                Source="{Binding linkimage}"
                Height="350"
                Width="300"
                VerticalAlignment="Center">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding AddImage}"
                                                   CommandParameter="{Binding ElementName=HinhAnh}"></i:InvokeCommandAction>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Image>
            </Grid>
            <Grid Grid.Column="1">
                <StackPanel 
                            Orientation="Vertical"
                            Margin="15,30,0,0"
                            >
                    <TextBlock
                        Margin="-15,0,0,20"
                        HorizontalAlignment="Center"
                        Text="SẢN PHẨM MỚI"
                        FontSize="24"
                        TextAlignment="Center"
                        FontWeight="Bold"
                        />
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                Margin="8,0,0,0"
                                Text="MÃ SẢN PHẨM"
                                TextAlignment="Center" FontWeight="Bold"
                            />
                            <Border
                            CornerRadius="10"
                            BorderThickness="2"
                            BorderBrush="gray"
                            Height="30"
                            >
                                <TextBox
                                x:Name="MaSp"
                                HorizontalAlignment="Left"
                                Width="150"
                                IsEnabled="False"
                                BorderThickness="0"
                                
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="BlueViolet"
                            />
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Vertical"
                                    Margin="10,0,0,0"
                                    >
                            <TextBlock
                                Margin="8,0,0,0"
                                Text="TÊN SẢN PHẨM"
                                TextAlignment="Center" FontWeight="Bold"
                            />
                            <TextBox
                                Height="30"
                                x:Name="TenSp"
                                
                                HorizontalAlignment="Left"
                                Width="150"
                                BorderThickness="2"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="BlueViolet"
                            />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,10,0,0"
                                >
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                Margin="8,0,0,0"
                                Text="GIÁ SẢN PHẨM"
                                TextAlignment="Center" FontWeight="Bold"
                            />
                            <TextBox
                                Height="30"
                                x:Name="GiaSp"
                                HorizontalAlignment="Left"
                                Width="150"
                                
                                BorderThickness="2"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="BlueViolet"
                            />
                        </StackPanel>
                        <StackPanel Orientation="Vertical"
                                    Margin="10,0,0,0"
                                    >
                            <TextBlock
                                Margin="8,0,0,0"
                                Text="LOẠI SẢN PHẨM"
                                TextAlignment="Center" FontWeight="Bold"
                            />
                            <Border
                            BorderBrush="Gray"
                            BorderThickness="2"
                            Margin="5,0,0,0"
                            Height="30"
                            Width="150"
                            CornerRadius="10"
                            Background="White"
                        >
                                <ComboBox
                                x:Name="LoaiSp"
                                Style="{StaticResource MaterialDesignFilledComboBox}"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="4,-15,0,0"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                BorderThickness="0"
                                
                                materialDesign:HintAssist.Foreground="White"
                                Background="White"
                               
                                Height="30"
                                FontSize="12"
                                Width="130">
                                    <ComboBoxItem Content="IPhone"/>
                                    <ComboBoxItem Content="Samsung"/>
                                    <ComboBoxItem Content="LG"/>
                                    <ComboBoxItem Content="Oppo"/>
                                    <ComboBoxItem Content="Xiaomi"/>
                                    <ComboBoxItem Content="Realme"/>
                                    <ComboBoxItem Content="Vivo"/>
                                    <ComboBoxItem Content="ASUS"/>
                                    <ComboBoxItem Content="NOKIA"/>
                                    <ComboBoxItem Content="MASSTEl"/>
                                </ComboBox>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,10,0,0"
                                >
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                Margin="8,0,0,0"
                                Text="SỐ LƯỢNG"
                                TextAlignment="Center" FontWeight="Bold"
                            />
                            <TextBox
                                Height="30"
                                x:Name="SlSp"
                                HorizontalAlignment="Left"
                                Width="150"
                                
                                BorderThickness="2"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="BlueViolet"
                            />
                        </StackPanel>
                        <StackPanel Orientation="Vertical"
                                    Margin="10,0,0,0"
                                    >
                            <TextBlock
                                Margin="8,0,0,0"
                                Text="DUNG LƯỢNG"
                                TextAlignment="Center" FontWeight="Bold"
                            />
                            <Border
                            BorderBrush="Gray"
                            BorderThickness="2"
                            Margin="5,0,0,0"
                            Height="30"
                            Width="150"
                            CornerRadius="10"
                            Background="White"
                        >
                                <ComboBox
                                x:Name="SizeSp"
                                Style="{StaticResource MaterialDesignFilledComboBox}"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="4,-15,0,0"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                BorderThickness="0"
                                
                                materialDesign:HintAssist.Foreground="White"
                                Background="White"
                                
                                Height="30"
                                FontSize="12"
                                Width="130">
                                    <ComboBoxItem Content="64GB"/>
                                    <ComboBoxItem Content="128GB"/>
                                    <ComboBoxItem Content="512GB"/>
                                    <ComboBoxItem Content="1T"/>
                                    <ComboBoxItem Content="Khác"/>
                                </ComboBox>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                    <TextBlock
                                Margin="8,10,0,0"
                                Text="THÔNG TIN VÀ THÔNG SỐ KỸ THUẬT"
                                TextAlignment="Center" FontWeight="Bold"
                            />
                    <TextBox
                                x:Name="MotaSp"
                                
                                HorizontalAlignment="Left"
                                Width="310"
                                Height="150"
                                BorderThickness="2"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="BlueViolet"
                                HorizontalScrollBarVisibility="Auto"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                            />
                    <Button Content="THÊM SẢN PHẨM"
                            Margin="0,30,0,0"
                            Width="230"
                            Background="BlueViolet"
                            BorderThickness="0"
                            x:Name="btnadd"
                            >
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding AddProduct}"
                                                   CommandParameter="{Binding ElementName=Add_product}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
